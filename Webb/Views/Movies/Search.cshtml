@model Webb.Models.Search
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_LayoutLogged.cshtml";
}

<h1>Search</h1>
@using (@Html.BeginForm("SearchMovie", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Key)
        @Html.TextBoxFor(m => m.Key, null, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Key)
    </div>
    <div class="form-group">
        @Html.DropDownListFor(m => m.GenreName, new SelectList(Model.Genres, "Id", "GenreName"), "Select a genre (optional field)", new { @class = "form-control" })
    </div>
    <button type="submit" class="btn btn-primary">
        Search for a movie
    </button>
}
